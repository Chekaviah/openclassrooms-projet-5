{% extends "layout/front.twig" %}

{% block title %}Créer un post{% endblock %}

{% block content %}
	<section id="post-create">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<h2>Créer un blog post</h2>
					<hr class="star-primary">
				</div>
			</div>
			<div class="row">
				<div class="col-lg-8 col-lg-offset-2">
					<form action="/create-post" method="post">
						<div class="form-group">
							<label for="post-title">Titre du post</label>
							<input type="text" id="post-title" name="title" class="form-control" required>
						</div>
						<div class="form-group">
							<label for="post-header">Chapô</label>
							<input type="text" id="post-header" name="header" class="form-control" required>
						</div>
						<div class="form-group">
							<label for="post-content">Post</label>
							<textarea id="post-content" name="content" class="form-control" rows="3" required></textarea>
						</div>
						<div class="form-group">
							<label for="post-author">Auteur</label>
							<input type="text" id="post-author" name="author" class="form-control" required>
						</div>
						<div class="text-center">
							<input type="hidden" name="csrf" value="{{ csrf }}">
							<button type="submit" class="btn btn-default">Créer le post</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}