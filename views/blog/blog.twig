{% extends "layout/front.twig" %}

{% block title %}Liste des posts{% endblock %}

{% block content %}
    <section id="post-list">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Liste des posts</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                {% for post in posts %}
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <a class="post-link" href="/view/{{ post.id }}">
                            <div class="post-item">
                                <div class="post-title"><h4>{{ post.title }}</h4></div>
                                <div class="post-header"><h6>{{ post.header }}</h6></div>
                                <div class="post-publication">Par <span class="post-author">{{ post.author }}</span> le {{ post.publication|date("d/m/Y") }}</div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}