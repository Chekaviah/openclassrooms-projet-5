{% extends "layout/front.twig" %}

{% block title %}Edition post #{{ post.id }}{% endblock %}

{% block content %}
    <section id="post-edit">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Edition du blog post #{{ post.id }}</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <form action="/edit-post" method="post">
                        <div class="form-group">
                            <label for="post-title">Titre du post</label>
                            <input type="text" id="post-title" name="title" class="form-control" value="{{ post.title }}" required>
                        </div>
                        <div class="form-group">
                            <label for="post-header">Chap√¥</label>
                            <input type="text" id="post-header" name="header" class="form-control" value="{{ post.header }}" required>
                        </div>
                        <div class="form-group">
                            <label for="post-content">Post</label>
                            <textarea id="post-content" name="content" class="form-control" rows="6" required>{{ post.content }}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="post-author">Auteur</label>
                            <input type="text" id="post-author" name="author" class="form-control" value="{{ post.author }}" required>
                        </div>
                        <div class="text-center">
                            <input type="hidden" name="id" value="{{ post.id }}">
                            <input type="hidden" name="csrf" value="{{ csrf }}">
                            <button type="submit" class="btn btn-default">Enregistrer les modifications</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}